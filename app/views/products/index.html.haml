%h1 Products
.col-md-3
  .list-group
  -@categories.each do |category|
    %a.list-group-item{:href => "/categories/#{category.id}"}= category.name


.container
  .row
    -@products.each do |product|
      .col-sm-3.col-lg-3.col-md-3
        .thumbnail
          %img{:alt => "", :src => product.img_link }
            .caption
              %h4.pull-right= "$" + product.list_price.to_s
              %br/
              %h4
                %a= link_to product.name, product
              %p= product.description[1..150] + '...'

